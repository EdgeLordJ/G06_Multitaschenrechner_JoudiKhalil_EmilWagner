<Window x:Class="Multitaschenrechner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multitaschenrechner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <StackPanel Background="#444444" >
            <RadioButton x:Name="rbtnCalculator" Margin="10" Content="Taschenrechner" Checked="rbtnCalculator_Checked"></RadioButton>
            <RadioButton x:Name="rbtnGraph" Margin="10" Content="Graphen"></RadioButton>
        </StackPanel>

        <ContentControl x:Name="CC" Grid.Column="1"/>
    </Grid>
</Window>
